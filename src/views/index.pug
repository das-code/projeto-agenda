- const title = 'Contatos'

include includes/head

body
  include includes/navbar

  .container
    .row
      .col-lg-2

      div(class="col-lg-8 my-3")
        h1(class="text-center") Lista de Contatos
        p(class="text-center lead") Seus contatos est√£o abaixo.

        include includes/flashMessage

        if errorsMessages.length
          +flashMessage({ type: 'danger', messages: errorsMessages })

