mixin form(formInfo)
  div(class=`col-md card mx-1 my-2 px-2 py-3 bg-light`) 
    h3= formInfo.title 
    p.text-muted= formInfo.subtitle

    form(class=`${formInfo.className}` action=`${formInfo.action}` method='POST')
      input(type="hidden" name="_csrf" value=`${csrfToken}`)

      div(class="form-group email-group")
        label(for="email") Seu e-mail
        input(class="form-control" type="email" name="email")

      div(class="form-group password-group")
        label(for="password") Sua senha
        input(class="form-control" type="password" name="password")

      button(
        class=`btn btn-${formInfo.theme} btn-lg btn-block font-weight-bold`
        type="submit"
      )= formInfo.buttonLabel